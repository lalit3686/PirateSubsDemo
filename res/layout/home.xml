<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/loadingbackandroid"
  android:id="@+id/myLinearLayout"
  >
  
  <FrameLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  <RelativeLayout
  android:layout_height="wrap_content"
  android:layout_width="wrap_content">
  
  <ImageView 
  android:layout_marginTop="80dp"
  android:layout_width="fill_parent"
  android:layout_alignParentLeft="true"
  android:layout_height="wrap_content"
  android:id="@+id/spin"
  android:src="@drawable/loadingspinandroid"/>
  
  
  <ImageView 
  android:id="@+id/front"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:src="@drawable/loadingfrontandroid"
  android:scaleType="fitXY"
  />
  
  <FrameLayout 
  android:id="@+id/frame_newbutton"
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content" 
  android:layout_alignParentLeft="true" 
  android:layout_marginLeft="10dp" 
  android:layout_marginTop="190dp">
  
  <ImageView 
  	  android:id="@+id/btn_new_game"
      android:layout_height="60dp" 
      android:layout_width="170dp" 
      android:background="@drawable/playbutton">
  </ImageView>
  
  <ImageView 
  android:id="@+id/Img_new_game"
  android:layout_width="170dp"
  android:layout_height="60dp"
  android:background="@anim/button_anim"/>
  
  <ImageView 
  android:src="@drawable/openfient" 
  android:layout_marginRight="15dp"
  android:layout_marginTop="5dp"
  android:layout_gravity="right" 
  android:layout_width="41dp" 
  android:layout_height="41dp"
  android:id="@+id/ibtnOpenFeintScreen1"
  />

  </FrameLayout>
  
  <FrameLayout 
  android:layout_below="@+id/frame_newbutton"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
  <RelativeLayout
  android:layout_height="wrap_content"
  android:layout_width="match_parent"><!--
  
  <ImageView
	android:src="@drawable/openfient"
	android:layout_width="41dp"
	android:layout_height="41dp"
	android:layout_centerInParent="true"
	android:id="@+id/ibtnOpenFeintScreen1"/>
  
  --><ImageView 
  android:id="@+id/imgOptions"
  android:src="@drawable/options" 
  android:layout_marginRight="15dp"
  android:layout_width="41dp" 
  android:layout_height="41dp"
  android:layout_alignParentRight="true"/>
  
  <ImageView 
  android:id="@+id/imgAward"
  android:layout_toLeftOf="@+id/imgOptions"
  android:src="@drawable/goach" 
  android:layout_marginRight="15dp"
  android:layout_width="41dp" 
  android:layout_height="41dp"
  
  />
  
    <ImageView 
   android:id="@+id/imgleader"
  android:src="@drawable/leader" 
  android:layout_marginRight="15dp"
  android:layout_width="41dp" 
  android:layout_toLeftOf="@+id/imgAward"
  android:layout_height="41dp"/>
  </RelativeLayout>
  </FrameLayout>
  </RelativeLayout>
  </FrameLayout>
</RelativeLayout>
